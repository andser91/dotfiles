### kubectl
alias k="kubectl"

### ls
alias la="exa -a --color=always --icons --group-directories-first"
alias ll="exa -al --color=always --icons --group-directories-first"
alias ls="exa --color=always --icons --group-directories-first"
alias tree="exa -T --color=always --icons --group-directories-first"

### git
alias ga="git add ."
alias gp="git push"
alias gm="git commit"


### nvim
alias v="nvim"

### my shortcut
alias home="cd ~"
alias dw="cd ~/Scaricati"
alias cfg="cd ~/.config"
alias zshconfig="nvim ~/.zshrc"
alias zshsource="source ~/.zshrc"

# Pacman
alias unin="sudo pacman -Rns"
alias install="sudo pacman -S"
alias update="sudo pacman -Syyy"

alias cp="cp -r"
alias rm="rm -rf"

alias neofetch="neofetch --jp2a ~/.config/neofetch/jolly-roger-rufy.jpg"



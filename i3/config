bindsym $mod+k exec ~/.config/i3/scripts/i3_scratchpad_show_or_create.sh 'alacritty' 'alacritty'

bindsym $mod+n exec ~/.config/i3/scripts/i3_scratchpad_show_or_create.sh 'htop' 'alacritty -e htop'

